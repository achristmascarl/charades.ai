{
  "extends": ["next/core-web-vitals", "eslint:recommended"],
  "rules": {
    "quotes": ["error", "double", { "avoidEscape": true }],
    "max-len": ["error", { "code": 80 }],
    "prettier/prettier": [
      "error",
      { "endOfLine": "auto" },
      { "usePrettierrc": true },
      { "trailingComma": "all" }
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": ["react", "react-hooks", "prettier"]
}
